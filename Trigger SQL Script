ALTER TABLE customers DROP COLUMN num_pets;
ALTER TABLE customers ADD num_pets Int(5);
Commit;

SET SQL_SAFE_UPDATES = 0;
UPDATE customers SET num_pets =(SELECT COUNT(*)
                    FROM pets 
                    WHERE pets.Customers_customer_id = customers.customer_id);
                   
Use petsprojectschema;
DELIMITER | 
CREATE TRIGGER ADDpet 
AFTER INSERT ON pets
FOR EACH ROW 
BEGIN 
    UPDATE customers
        SET num_pets = num_pets + 1
       WHERE customers.customer_id = NEW.Customers_customer_id; 
END |
DELIMITER ;

SELECT * FROM customers;
INSERT INTO pets VALUES
(1,'Sally','F','S','nothing','160','1');
